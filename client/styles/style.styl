@import '_normalize.styl'
@import '_typography.styl'

body
  background lightgray

.game-board
  margin 0 auto
  width 700px
  height 500px
  background-color blue

.category-column
  display inline-block
  width 16.666%

.category-title
  font-size 10px
  text-align center
  color white

.category-clue
  font-size 20px
  color yellow
  a:link
    text-decoration none
    color yellow
  a:visited
    color yellow

.category-item
  display flex
  justify-content center
  align-items center
  height 83.333px
  width 116.666px
  border 1px solid black
  padding 15px

.clue
  display flex
  justify-content center
  align-items center
  flex-direction column
  text-align center
  height 100%
  width 100%
  font-size 30px
  color white
  padding 15px

.clue:hover
  cursor pointer

.clue-value:hover
  cursor pointer

.player-manager
  display flex
  flex-direction row
  margin 0 auto
  width 500px

.player
  display flex
  flex-direction column
  justify-content center
  align-items center
  text-align center
  border 1px solid black
  width 166.666px
  height 100px
  background-color blue

.player-name
  color white
  display block

.player-name:hover
  cursor pointer
  text-decoration underline

.player-name-edit
  width 150px

.player-score
  color yellow
  display block

.player-score-subtract
  background-color tomato
  color black
  width 30px
  margin 5px

.player-score-add
  background-color lightgreen
  color black
  width 30px
  margin 5px

.host-controls
  margin 0 auto
  width 500px
  border 1px solid black
  padding: 25px

.clearfix
  clear both
  height 0
  font-size 0
