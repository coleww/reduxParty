@import '_normalize.styl'
@import '_typography.styl'

body
  background offwhite

.game-board
  margin-left 50px
  margin-right 50px

.category-column
  display inline-block
  width 16.666%
  background-color blue

.category-title
  font-size 15px
  text-align center
  color white

.category-clue
  font-size 40px
  text-align center
  color yellow
  a:link
    text-decoration none
    color yellow
  a:visited
    color yellow

.category-item
  text-align center
  height 100px
  border 1px solid black

